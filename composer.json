{
    "name": "vgirol/jsonapi-assert-laravel",
    "description": "RESTfull JSON:Api test assertions for Laravel",
    "type": "library",
    "homepage": "http://github.com/VGirol/JsonApi-Assert-Laravel",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "phpunit/phpunit": "^8.0",
        "dms/phpunit-arraysubset-asserts": "^0.1",
        "laravel/laravel": "^5.8",
        "vgirol/jsonapi-assert": "dev-master"
    },
    "require-dev": {
        "infection/infection": "dev-master",
        "orchestra/testbench": "^3.8",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../JsonApi-Assert",
            "options": {
                "symlink": true
            }
        }
    ],
    "authors": [
        {
            "name": "Vincent Girol",
            "email": "vincent@girol.fr"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "VGirol\\JsonApiAssert\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VGirol\\JsonApiAssert\\Laravel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@setup"
        ],
        "setup": "bash install/setup.sh",
        "test": "./vendor/bin/phpunit tests ",
        "coverage": "./vendor/bin/phpunit tests --coverage-xml=build/coverage/coverage-xml --log-junit=build/coverage/phpunit.junit.xml",
        "infection": "./vendor/bin/infection --coverage=build/coverage --threads=$(nproc) --configuration=infection.json.dist",
        "php-linting": "./vendor/bin/phpcs --encoding=utf-8",
        "build": [
            "@php-linting",
            "@coverage",
            "@infection"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "VGirol\\JsonApiAssert\\Laravel\\JsonApiAssertServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
